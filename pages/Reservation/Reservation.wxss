/* pages/Reservation/Reservation.wxss */
page{
  background-color:rgb(240, 244, 245);
}
.ns {
  width: 100%;
  text-align:center;
  color: white;
  padding:30px 0 10px 0;
  background:linear-gradient(to bottom,#4990e2, #87c1f1 );
}
.ns_Y{
  width: 100%;
  text-align:center;
  color: white;
  padding:50px 0 20px 0;
  background:linear-gradient(to bottom,#4990e2, #87c1f1);
}
.Reservation_top{
  padding:20px;  
}
.Reservation_sucessinfo{
  display: block;
  font-size: 18px;
  text-align: center;
  padding:10px 0;
}
.Reservation_icon{
  padding-top: 15px;
}
.Reservation_sucessTime{
  font-size: 14px;  
}
.Reservation_card{

  background-color: white;
  width: 90%;
  text-align: center;
  margin:0 auto;
  margin-top: 30px;
  padding:15px 0 30px 0;
  border-radius: 15px;
}
.cancel_btn{
  margin-top:30px;
}
.cancel_btn button{
  width: 40%;  
}
.Card_info{
  padding:12px 10px 10px 0;
  font-size: 13px;
  text-align: left;

}
.Reservation_card .van-cell__title{
  font-weight: bold;
}
.Reservation_card .van-dialog__message-text{
  font-size: 18px;
}
.Reservation_card .van-button__text{
  font-size: 14px;
}
.fail_card_Y{
  margin-top: 280px;
}
.fail_card{
  margin-top: 200px;
}

.failCarInfo{
  width: 50%;
  margin:0 auto;
}
.failCarInfo .van-empty__image{
  width: 120px;
  height:120px;
}
.failCarInfo .van-empty__image__img{
  width: 120px;
  height: 120px;
}