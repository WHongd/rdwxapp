/* pages/opus/opus.wxss */
@import '/miniprogram_npm/@vant/weapp/common/index.wxss';
@import '/pages/index/index.wxss';
.OpustBox{
  margin-bottom: 20px;
}
.OpusTitleBox{
  text-align: center;
  padding:20px 0;

}
.Opustitle{
  color: rgb(80, 79, 79);
  font-size: 22px;
  letter-spacing: 3px;
}
.OpusTitleBox text{
  display: block;
  text-transform: uppercase;
  font-family:Georgia, 'Times New Roman', Times, serif;
  color: rgb(87, 86, 86);
  font-size: 10px;
  letter-spacing: 1px;
}

.OpustTitleinfo{
  margin-top:12px;
  text-align: center;
  font-size: 14px;
}
.OpustKey{
  text-align: center;
  font-size: 12px;
  color:#aaa9a9;
}
.OpustMore{
  padding:0 15px;
}
.OpustMore text{
  color: #1989fa;
  font-size: 12px;
  margin-left: 3px;
  font-family:Georgia, 'Times New Roman', Times, serif;
}
.van-multi-ellipsis--l2{
  font-size: 12px;
  color: #504f4f;
  padding-right: 5px;
  text-indent: 2em;
}
.OpustShare{
  text-align: right;
}
.OshareIcon,.OmoreIcon{
  display: inline-block;
  padding-right:15px;
}
.OpustShare text{
  margin-left: 2px;
  font-size: 12px;  
}