/* -------- */

.authorAllimg{
  display: flex;
  padding: 10rpx 10rpx;
  box-sizing: border-box;
}
.leftContainer {
  display: flex;
  margin-right: 10rpx;
  flex-direction: column;
  }
  
  .rightContainer {
  display: flex;
  flex-direction: column;
  }
  
  .cateItem {
  margin-bottom: 5rpx;
  }
  
  .item {
  width: 360rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 6rpx;
  }
  
  .itemImg {
  margin-bottom: 14rpx;
  width: 100%;
  vertical-align: middle;
  border-radius: 6rpx;
  }
.VideoBox{
  width:100%;
  padding:20px 0;
}
.VideoBox video{
  width: 100%;
  height: 225px;  
}
.video_cover{
  width:100%;
  height:100%;
  position:relative;
}
.video_play_icon{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  z-index:5
}

#myVideo{
  width: 100%;
  height: 252px;
}
.LikeBox{
  text-align: center;
  padding:20px 0;
}
.LikeBox_Y{
  text-align: center;
  padding:20px 0;
  height: 130px;
  margin-bottom:70px;
}
.Statistics{
  padding:10px 0;
  color: #c1c2c4;
}
.LikeIcon{
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin:0 auto;
}
.LikeIcon image{
  margin-top:8px;
  width: 32px;
  height: 32px;
}


/* 
  图片自定义样式
 */
