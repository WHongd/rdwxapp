.waterfall-title{
  background-color: yellow;
}
/* 标题文字自定义样式 */
.waterfall-title spen{
  color: green;
  font-size: 24px;
  font-weight: 300;
}

/* 
  节点样式
*/
.page_slot{
  width: 100%;
  height: 50px;
  padding-bottom: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  /* background-color: aqua; */
}
.zdy-spen{
  color: rgb(116, 187, 187);
  font-size: 13px;
  font-weight: 700;
}
/* 分享按钮 */
.shareBtn{
  position: fixed;
  top:5%;
  right: -15px;
  width: 60px;
  height: 40px;
  z-index: 99;
}
.shareBtn button{
  background-color: #1989fa;
  border:none;
  border-radius: 25px;
  color: white;
  font-size: 12px;
  padding:0 8px;
}

.BottomFixed{
  width: 100%;
  height: 45px;
  position: fixed;
  bottom:0px;
  left: 0;
  background-color: white;
  border:1rpx solid #f1f0f0;
  z-index: 999;
  /* padding-bottom:20px; */
  /* padding:10px 0 10px 0px; */
}
.BottomFixed_Y{
  width: 100%;
  height: 45px;
  position: fixed;
  bottom:20px;
  left: 0;
  background-color: white;
  border:1rpx solid #f1f0f0;
  z-index: 999;
}

